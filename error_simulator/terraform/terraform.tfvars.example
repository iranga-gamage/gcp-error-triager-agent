# Example Terraform variables file
# Copy this to terraform.tfvars and update with your values

project_id                   = "your-gcp-project-id"
region                       = "us-central1"
service_name                 = "error-simulator"
image_tag                    = "latest"
artifact_registry_location   = "us-central1"

# Resource configuration
cpu_limit                    = "1"
memory_limit                 = "512Mi"
# No autoscaling - single instance for non-production use
min_instances                = 0
max_instances                = 1
timeout_seconds              = 300

# Access control
# IMPORTANT: Set to false to require authentication (recommended for production)
allow_unauthenticated        = false

# Monitoring
enable_monitoring            = true
